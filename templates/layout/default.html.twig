<!doctype html>
<html lang="pl">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="robots" content="noindex, nofollow, noarchive, noodp, noydir">

        <title>
            {% block title %}{% endblock %}BackOffice - Zwolnieni z Teorii
        </title>

        {% block stylesheets %}
            {{ encore_entry_link_tags('app', null, 'build') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app', null, 'build') }}
        {% endblock %}
    </head>
    <body>
        {% block menu %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container">
                    <a class="navbar-brand" href="{{ path('api.json.test.login') }}">BackOffice</a>
                    <button
                        class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                    >
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" data-toggle="collapse" id="navbarSupportedContent">
                        {{ knp_menu_render('main', {'currentClass': 'active','template': 'back-office/includes/knp_menu.html.twig', 'ancestorClass': 'active'}) }}

                        <div class="navbar-nav ms-auto flex-nowrap">
                            <form class="form-inline my-2 my-lg-0">
                                <a href="{{ path('api.json.test.logout') }}"
                                    class="btn btn-outline-info my-2 my-sm-0 "
                                    type="submit"
                                >
                                    Wyloguj
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </nav>
        {% endblock %}

        <main class="container pt-5">
            {% set flashes = app.flashes %}
            {% if flashes is not empty %}
                <div class="row">
                    <div class="col-12">
                        {% for label, messages in flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                                    </button>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            {% block content %}{% endblock %}
        </main>
    </body>
</html>
